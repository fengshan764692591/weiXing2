<view class="reviceWarp">
  <view class="reviceBtnWarp" wx:if="{{!(address&&address.all)}}">
    <button plain="{{true}}" type="primary" bindtap="handleChooseAddress">添加收货地址</button>
  </view>
  <view wx:else class="reviceUser">
    <view class="addressTitle">
      <view>收货人:{{address.userName}}</view>
      <view>{{address.all}}</view>
    </view>
    <view class="revicePhone">{{address.telNumber}}</view>
  </view>
</view>
<view class="cartMain">
  <view class="cartTitle">购物车</view>
  <view class="cartContent">
    <block wx:if="{{hasGoods}}">
      <view class="cartItem" wx:for="{{cart}}" wx:for-index="key" wx:for-item="value" wx:key="value">
        <!-- 复选框 -->
        <view class="cartCkt">
          <checkbox-group bindchange="handleCartCheck" data-id="{{value.goods_id}}">
            <checkbox color="red" checked="{{value.checked}}"></checkbox>
          </checkbox-group>
        </view>
        <!-- 图片 -->
        <view class="cartImg">
          <image class="" src="{{value.goods_small_logo}}" mode="widthFix" />
        </view>
        <view class="cartInfo">
          <view class="goodsName">{{value.goods_name}}</view>
          <view class="goodsPrice">
            <view class="goodsPriceYuan">￥{{value.goods_price}}</view>
            <view class="cartTool">
              <text class="cartNumEdit" bindtap="handleCartNum" data-operation="{{-1}}" data-id="{{value.goods_id}}">-</text>
              <text class="cartNum">{{value.num}}</text>
              <text class="cartNumEdit" bindtap="handleCartNum" data-operation="{{1}}" data-id="{{value.goods_id}}">+</text>
            </view>
          </view>
        </view>
      </view>
    </block>
    <block wx:else="{{hasGoods}}">
      <view>
        <image class="" src="http://img3.imgtn.bdimg.com/it/u=716694481,1090670576&fm=26&gp=0.jpg" mode="widthFix" />
      </view>
    </block>
  </view>
</view>
<!-- 底部工具栏 -->
<view class="btmTool">
  <view class="callCheckbox">
    <checkbox-group bindchange="handleCartAllCheck">
      <checkbox color="red" checked="{{isAllChecked}}">全选</checkbox>
    </checkbox-group>
  </view>
  <view class="totalPrice">
    <view class="totalMoney">
      合计:
      <text>￥{{totalPrice}}</text>
    </view>
    <view class="freightOrder">包含运费</view>
  </view>
  <view class="cartPay" bindtap="handlePay">结算({{totalNum}})</view>
</view>