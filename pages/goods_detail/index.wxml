<!-- 轮播图 -->
<view class="detailSwiper">
  <swiper
  autoplay="{{true}}"
  circular="{{true}}"
  indicator-dots="{{true}}"
  >
    <swiper-item 
    wx:for="{{goodsInfo.pics}}"
    wx:key="pics_id"
    bindtap="handlePreviewImage"
    data-index="{{index}}"
    >
      <image class="" src="{{item.pics_mid}}" mode="widthFix" />
    </swiper-item>
  </swiper>
</view>
<!-- 商品的价格 -->
<view class="goodsPrice">
  ￥{{goodsInfo.goods_price}}
</view>
<!-- 商品名称 -->
<view class="goodsNameWarp">
  <view class="goodsName">{{goodsInfo.goods_name}}</view>
  <view class="goodsNameIcon" bindtap="handleGollect">
    <text class="iconfont {{isCollect?'icon-shoucang1':'icon-shoucang'}}"></text>
    <view class="iconName">收藏</view>
    <view>
      {{isCollect}}
    </view>
  </view>
</view>
<!-- 图文详情 -->
<view class="goodsDetail">
  <view class="goodsDetailTitle">图文详情</view>
  <view class="goodsDetailContent">
    <rich-text class="" nodes="{{goodsInfo.goods_introduce}}">
    </rich-text>  
  </view>
</view>
<!-- 底部工具栏开始 -->
<view class="btmTool">
  <view class="toolItem">
    <text class="iconfont icon-kefu"></text>
    <view class="toolName">客服</view>
    <button open-type="contact">132</button>
  </view>
  <view class="toolItem">
    <text class="iconfont icon-yixianshi-"></text>
    <view class="toolName">分享</view>
     <button open-type="share">132</button>
  </view>
  <navigator open-type="switchTab" class="toolItem" url="/pages/cart/index">
    <text class="iconfont icon-gouwuche"></text>
    <view class="toolName">购物车</view>
  </navigator>
  <view class="toolItem btnCart" bindtap="handleCartAdd">
    加入购物车
  </view>
  <view class="toolItem btnBuy">
    立即购买
  </view>
</view>
  