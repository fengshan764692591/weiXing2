<!-- 轮播图 -->
<view class="detailSwiper">
  <swiper
  autoplay="{{true}}"
  circular="{{true}}"
  indicator-dots="{{true}}"
  >
    <swiper-item 
    wx:for="{{goodsInfo.pics}}"
    wx:key="pics_id"
    bindtap="handlePreviewImage"
    data-index="{{index}}"
    >
      <image class="" src="{{item.pics_mid}}" mode="widthFix" />
    </swiper-item>
  </swiper>
</view>
<!-- 商品的价格 -->
<view class="goodsPrice">
  ￥{{goodsInfo.goods_price}}
</view>
<!-- 商品名称 -->
<view class="goodsNameWarp">
  <view class="goodsName">{{goodsInfo.goods_name}}</view>
  <view class="goodsNameIcon">
    <text class="iconfont icon-shoucang1"></text>
    <view class="iconName">收藏</view>
  </view>
</view>
<!-- 图文详情 -->
<view class="goodsDetail">
  <view class="goodsDetailTitle">图文详情</view>
  <view class="goodsDetailContent">
    <rich-text class="" nodes="{{goodsInfo.goods_introduce}}">
    </rich-text>  
  </view>
</view>